@model FullStackManagementMVC.ViewModels.HomeViewModel

<!-- Begin Page Content -->
<div class="container-fluid">


    <!-- Content Row -->
    <div class="row">

        <!-- Earnings (Monthly) Card Example -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-s font-weight-bold text-primary text-uppercase mb-1">
                                Calorie Burn Target: @Model.Macros[0].BurnTarget
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800"><br />Protein: @Model.Macros[0].Protein g <br />Fat: @Model.Macros[0].Fat g <br />Carbs: @Model.Macros[0].Carbs g</div>
                        </div>
                        <div class="col mr-2">
                            <div class="text-s font-weight-bold text-primary text-uppercase mb-1">
                                Calorie Intake Target: @Model.Macros[0].IntakeTarget
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800"><br><br /><br /></div><br />
                        </div>

                        <div class="col-auto">

                            @*<i class="fas fa-calendar fa-2x text-gray-300"></i>*@

                        </div>

                    </div>
                </div>
            </div>
        </div>

        <!-- Earnings (Monthly) Card Example -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-s font-weight-bold text-success text-uppercase mb-1" style="text-align:center">
                                Total Budget
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800" id="test1" style="text-align:center">test</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Earnings (Monthly) Card Example -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-s font-weight-bold text-info text-uppercase mb-1" style="text-align:center">
                                To Do List Percent Complete
                            </div>
                            <div class="row no-gutters align-items-center">
                                <div class="col-auto">
                                    <div class="h5 mb-0 mr-3 font-weight-bold text-gray-800">@Model.ToDoPercent()%</div>
                                </div>
                                <div class="col">
                                    <div class="progress progress-sm mr-2">
                                        <div class="progress-bar bg-info" role="progressbar"
                                             style="width: @Model.ToDoPercent()%" aria-valuenow="80" aria-valuemin="0"
                                             aria-valuemax="100"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-clipboard-list fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Pending Requests Card Example -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-s font-weight-bold text-warning text-uppercase mb-1" style="text-align:center">
                                Salem, Or Weather
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800" style="text-align:center"> @Model.Weather.list[0].main.temp F <br />@Model.Weather.list[0].weather[0].main</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-comments fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Content Row -->

    <div class="row">
        
        <!-- Area Chart -->
        <div class="col-xl-8 col-lg-7">
            <div class="card shadow mb-4">
                <!-- Card Header - Dropdown -->
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 button onclick="myFunction() " class="m-0 font-weight-bold text-primary">Monthly Income Projections</h6>
                    <div class="dropdown no-arrow">
                        <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink"
                           data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in"
                             aria-labelledby="dropdownMenuLink">
                            <div class="dropdown-header">Dropdown Header:</div>
                            <a class="dropdown-item" href="#">Action</a>
                            <a class="dropdown-item" href="#">Another action</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="#">Something else here</a>
                        </div>
                    </div>
                </div>
                <!-- Card Body -->
                <div class="card-body">
                    <div class="chart-area">
                        <canvas id="myAreaChart"></canvas>
                    </div>

                    @*Future Feature for user to provide monthly chart data AJAX *@
                    @*<label for="Month">Month:</label><br>
                        <input type="number" name="Month" id="Month" ><br><br>*@
                    @*<label for="Income">Income:</label><br>
                    <input type="number" id="Income" name="Income"><br><br>
                    <button onclick="addData(myAreaChart)">Add</button>
                    <button onclick="removeData(myAreaChart)">Remove</button>*@
                    @*<select id="Month">
                        <option value="1">January</option>
                        <option value="2">Febuary</option>
                        <option value="3">March</option>
                        <option value="1">April</option>
                        <option value="1">January</option>
                        <option value="1">January</option>
                        <option value="1">January</option>
                        <option value="1">January</option>
                        <option value="1">January</option>
                        <option value="1">January</option>
                        <option value="1">January</option>
                        <option value="1">January</option>
                    </select>*@
                </div>
            </div>
        </div>

        <!-- Pie Chart -->
        <div class="col-xl-4 col-lg-5">
            <div class="card shadow mb-4">
                <!-- Card Header - Dropdown -->
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Budget</h6>
                    <div class="dropdown no-arrow">
                        <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink"
                           data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in"
                             aria-labelledby="dropdownMenuLink">
                            <div class="dropdown-header">Dropdown Header:</div>
                            <a class="dropdown-item" href="#">Action</a>
                            <a class="dropdown-item" href="#">Another action</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="#">Something else here</a>
                        </div>
                    </div>
                </div>
                <!-- Card Body -->
                <div class="card-body">
                    <div class="chart-pie pt-4 pb-2">
                        <canvas id="myPieChart"></canvas>
                    </div>
                    <div class="mt-4 text-center small">
                        <span class="mr-2">
                            <i class="fas fa-circle" style="color: #4e73df"></i> Rent
                        </span>
                        <span class="mr-2">
                            <i class="fas fa-circle " style="color: #1cc88a"></i> Internet
                        </span>
                        <span class="mr-2">
                            <i class="fas fa-circle " style="color: #36b9cc"></i> Electricity
                        </span>
                        <span class="mr-2">
                            <i class="fas fa-circle " style="color: #333555 "></i> Car Insurance
                        </span>
                        <span class="mr-2">
                            <i class="fas fa-circle " style="color: #FFC300 "></i> Phone
                        </span>
                        <span class="mr-2">
                            <br /><i class="fas fa-circle" style="color: #F700FF"></i> Garbage
                        </span>
                        <span class="mr-2">
                            <i class="fas fa-circle" style="color: #FF0000"></i> Food
                        </span>
                        <span class="mr-2">
                            <i class="fas fa-circle" style="color: #FBFF00"></i> Gas
                        </span>

                    </div>
                    <br />

                    @*<label for="Category">Category:</label>
                    <input type="text" name="Category" id="Category"><br />
                    <label for="Amount">Amount: &nbsp</label>
                    <input type="number" id="Amount" name="Amount"><br><br>

                    <button onclick="addData2(myAreaChart)">Add</button>
                    <button onclick="removeData2(myAreaChart)">Remove</button>*@
                </div>
            </div>
        </div>
    </div>

    <!-- Content Row -->
    <div class="row">

        <!-- Content Column -->
        <div class="col-lg-6 mb-4">

            <!-- Project Card Example -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Goals</h6>
                </div>
                <div class="card-body">
                    <h4 class="small font-weight-bold" id="edit1">
                        @Model.GoalList[0].Goal<span class="float-right">@Model.GoalList[0].Percentage%</span>
                    </h4>
                    <div class="progress mb-4">
                        <div class="progress-bar bg-danger" role="progressbar" style="width: @Model.GoalList[0].Percentage%"
                             aria-valuenow="20" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                    <h4 class="small font-weight-bold">
                        @Model.GoalList[1].Goal <span class="float-right">@Model.GoalList[1].Percentage%</span>
                    </h4>
                    <div class="progress mb-4">
                        <div class="progress-bar bg-warning" role="progressbar" style="width: @Model.GoalList[1].Percentage%"
                             aria-valuenow="40" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                    <h4 class="small font-weight-bold">
                        @Model.GoalList[2].Goal <span class="float-right">@Model.GoalList[2].Percentage%</span>
                    </h4>
                    <div class="progress mb-4">
                        <div class="progress-bar" role="progressbar" style="width: @Model.GoalList[2].Percentage%"
                             aria-valuenow="60" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                    <h4 class="small font-weight-bold">
                        @Model.GoalList[3].Goal<span class="float-right">@Model.GoalList[3].Percentage%</span>
                    </h4>
                    <div class="progress mb-4">
                        <div class="progress-bar bg-info" role="progressbar" style="width: @Model.GoalList[3].Percentage%"
                             aria-valuenow="80" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                    <h4 class="small font-weight-bold">
                        @Model.GoalList[4].Goal <span class="float-right">@Model.GoalList[4].Percentage%</span>
                    </h4>
                    <div class="progress">
                        <div class="progress-bar bg-success" role="progressbar" style="width: @Model.GoalList[4].Percentage%"
                             aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </div>
            </div>

            <!-- Color System -->
            <div class="row">
                <script crossorigin="anonymous" async src="https://api.zipcan.com/script.js?token=6Xecn9HamNjy"></script>

            </div>

        </div>

        <div class="col-lg-6 mb-4">

            <!-- Illustrations -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">To Do List</h6>
                </div>
                <div class="card-body">
                    <div class="text-center">
                        <img class="img-fluid px-3 px-sm-4 mt-3 mb-4" style="width: 25rem;"
                             src="img/undraw_posting_photo.svg" alt="...">
                    </div>
                    <p>


                        @foreach (var item in Model.ToDoItem)
                        {

                            <h5 style="text-align:center">@item.Description</h5>

                            //<h6 style="text-align:center">@item.isDone</h6>

                        }

                    </p>
                </div>
            </div>

            <!-- Approach -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Vision of the day</h6>
                </div>
                <div class="card-body">
                    <p>
                        If you believe in yourself and have dedication and pride - and never quit, you'll be a winner.
                        The price of victory is high but so are the rewards.
                        Bear Bryant


                    </p>
                    <p class="mb-0">
                        There are two ways of spreading light: to be the candle or the mirror that reflects it.
                        Edith Wharton


                    </p>
                    <br />
                    <p class="mb-0">
                        I hated every minute of training, but I said, 'Don't quit. Suffer now and live the rest of your life as a champion.
                        Muhammad Ali
                    </p>
                </div>
            </div>

        </div>
    </div>

</div>

@*Bootstrap core JavaScript*@
<script src="vendor/jquery/jquery.min.js"></script>
<script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

@*Page level plugins*@
<script src="vendor/chart.js/Chart.min.js"></script>
<script src="/js/new.js"></script>
